[t:template,n:spell_{{stn}}_{{dmgtype}}_{{name}}_summon_{{req_lvl}}]
{
	specializes = base_spell_{{stn}}_{{dmgtype}}_{{name}}_summon;

	[attack]
	{
		damage_min = 0;
		damage_max = 0;
	}
	[magic]
	{
		attack_damage_modifier_min = ((((#combat_magic/{% if req_lvl <= 50 %}{{ '%0.5g' | format(1 - req_lvl/200) }}{% else %}{{ '%0.5g' | format(0.75 + (req_lvl-50)/400) }}{% endif %})*4.2)*{{dmg_c | float}})*{{abf_c or 1}})*{% if stable %}1.0{% else %}0.9{% endif %};
		attack_damage_modifier_max = ((((#combat_magic/{% if req_lvl <= 50 %}{{ '%0.5g' | format(1 - req_lvl/200) }}{% else %}{{ '%0.5g' | format(0.75 + (req_lvl-50)/400) }}{% endif %})*4.2)*{{dmg_c | float}})*{{abf_c or 1}})*{% if stable %}1.0{% else %}1.1{% endif %};
	}
}
