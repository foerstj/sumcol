[t:template,n:base_{{stn}}_summon]
{
	specializes = {{stn}}_base;

	[attack]
	{
		damage_min = 0;
		damage_max = 0;
	}
	[magic]
	{
		attack_damage_modifier_min = ((((#src_melee/{% if req_lvl <= 50 %}{{ '%0.5g' | format(1 - req_lvl/200) }}{% else %}{{ '%0.5g' | format(0.75 + (req_lvl-50)/400) }}{% endif %})*4.2)*{{dmg | float}})*{{'%0.3g' | format(abf | sqrt_if(vanilla) if abf is number else 1)}})*{% if stable %}1.0{% else %}0.9{% endif %};
		attack_damage_modifier_max = ((((#src_melee/{% if req_lvl <= 50 %}{{ '%0.5g' | format(1 - req_lvl/200) }}{% else %}{{ '%0.5g' | format(0.75 + (req_lvl-50)/400) }}{% endif %})*4.2)*{{dmg | float}})*{{'%0.3g' | format(abf | sqrt_if(vanilla) if abf is number else 1)}})*{% if stable %}1.0{% else %}1.1{% endif %};
	}
}
