[t:template,n:phrak_piercer_base]  // = phrak_piercer
{
	category_name = "1W_evil_d";
	doc = "phrak piercer";
	specializes = base_phrak;
	[actor]
	{
		[skills]
		{
			strength =  1, 0;
			intelligence =  1, 0;
			dexterity =  10, 0;
		}
	}
	[aspect]
